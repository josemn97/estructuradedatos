triangulo.h

#pragma once
class triangulo

{
private:
	float base;
	float altura;
	float area;

public:
	triangulo(void); 
	~triangulo(void); 

	float calculararea(float b, float h);
};

triangulo.cpp

#include "Stdafx.h"
#include "triangulo.h"


triangulo::triangulo(void)
{

}

triangulo::~triangulo(void)
{

}

float triangulo::calculararea(float b, float h)
{
	area=(b*h)/2;
	return area;
}

ejemplo.cpp

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "triangulo.h"

using namespace std;

void main(){
	triangulo triangulo1, triangulo2; 

	float x,y;
	cout<<"Ingresar la base: ";
	cin>>x;
	cout<<"Ingresar la altura: ";
	cin>>y;
	cout<<"El area del triangulo es:  "<<triangulo1.calculararea(x,y)<<endl;
	
	getch();
}
